            <td class="right">
                <label asp-for="Skill.SFIASkillCode"></label> :
            </td>
            <td>
                <input type="text" asp-for="Skill.SFIASkillCode" />
                <span asp-validation-for="Skill.SFIASkillCode" class="message"></span>
            </td>
        </tr>*@
        <tr>
            <td class="right">
                <label asp-for="Skill.SkillLevel"></label> :
            </td>
            <td>
                <input type="number" min="0" max="3" asp-for="Skill.SkillLevel" />
                <span asp-validation-for="Skill.SkillLevel" class="message"></span>
            </td>
        </tr>
        @*<tr>
            <td class="right">
                <label asp-for="Skill.SFIASkillLevel"></label> :
            </td>
            <td>
                <input type="number" min="1" max="3" asp-for="Skill.SFIASkillLevel" />
                <span asp-validation-for="Skill.SFIASkillLevel" class="message"></span>
            </td>
        </tr>*@
        <tr>
            <td class="right">
                <label asp-for="Skill.SkillText"></label> :
            </td>
            <td>
                <textarea asp-for="Skill.SkillText" rows="10" cols="70"></textarea>
                <span asp-validation-for="Skill.SkillText" class="message"></span>
            </td>
        </tr>
        <tr>
        <tr>
            <td colspan="2">
                <button type="submit">Save</button>
            </td>
        </tr>
