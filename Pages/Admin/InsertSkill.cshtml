@page "{ProfessionId:int}"
@model CareerFrameworkAPI.Pages.InsertSkillModel



<h2>Update existing Profession</h2>
<h3 class="message">@Model.Message</h3>


<form method="post">
    <table border="0">
        <tr>
            <td class="right">
                <label asp-for="Skill.ProfessionId"></label> :
            </td>
            <td>
                <input type="hidden" asp-for="Skill.ProfessionId" value="@Model.ProfessionId" />
                <span>@Model.ProfessionId</span>
            </td>
        </tr>
        <tr>
            <td class="right">
                <label asp-for="Skill.SkillCode"></label> :
            </td>
            <td>
                <input type="text" asp-for="Skill.SkillCode" />
                <span asp-validation-for="Skill.SkillCode" class="message"></span>
            </td>
        </tr>
